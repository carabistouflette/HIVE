{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HIVE",
  "version": "0.1.0",
  "identifier": "com.hive.app",
  "build": {
    "frontendDist": "../frontend/dist",
    "beforeDevCommand": "cd /home/alexisr/Desktop/Dev/Gits/HIVE/frontend && npm run dev",
    "beforeBuildCommand": "cd /home/alexisr/Desktop/Dev/Gits/HIVE/frontend && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "HIVE",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "linux": {
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "config/mcps/"
    ]
  }
}
